syntax = "proto2";

package aero_network;

message timing_packet {
	required int64 mac_address = 1;
	required int32 sync_receive_s = 2;
	required int32 sync_receive_ns = 3;
	required int32 delay_request_send_s = 4;
	required int32 delay_request_send_ns = 5;
	required int32 delay_request_receive_s = 6;
	required int32 delay_request_receive_ns = 7;
	required int32 offset_from_master_s = 8;
	required int32 offset_from_master_ns = 9;
	required int32 mean_path_delay_s = 10;
	required int32 mean_path_delay_ns = 11;
	required int32 master_to_slave_delay_s = 12;
	required int32 master_to_slave_delay_ns = 13;
	required int32 slave_to_master_delay_s = 14;
	required int32 slave_to_master_delay_ns = 15;
}